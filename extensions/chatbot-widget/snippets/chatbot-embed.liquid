<div id="chatbot-widget"></div>
<script>
  // Pass shop domain and configuration to the chatbot widget - automatically fetched for any store
  window.SHOPIFY_CHATBOT_CONFIG = {
    shop_domain: "{{ shop.permanent_domain }}",
    shop_name: "{{ shop.name }}",
    shop_id: {{ shop.id }},
    shop_currency: "{{ shop.currency }}",
    shop_timezone: "{{ shop.timezone }}",
    // Remix app configuration endpoint for dynamic API URLs
    config_endpoint: "https://jarvis2-0-djg1.onrender.com/api/widget-config?shop={{ shop.permanent_domain }}",
    // Fallback API endpoints (will be replaced by dynamic config from Remix app)
    api_endpoints: {
      chat: "https://jarvis2-0-djg1.onrender.com/api/chat",
      abandoned_cart_discount: "https://jarvis2-0-djg1.onrender.com/api/abandoned-cart-discount",
      session: "https://jarvis2-0-djg1.onrender.com/api/session",
      customer_update: "https://jarvis2-0-djg1.onrender.com/api/customer/update"
    }
  };
  
  // Set global shop domain for backward compatibility
  window.SHOP_DOMAIN = "{{ shop.permanent_domain }}";
  
  // Shopify object for additional compatibility
  window.Shopify = window.Shopify || {};
  window.Shopify.shop = "{{ shop.permanent_domain }}";
  
  // Debug: Log the configuration for troubleshooting
  console.log('ü§ñ Chatbot Config:', window.SHOPIFY_CHATBOT_CONFIG);
  console.log('üè™ Shop Domain:', window.SHOP_DOMAIN);
</script>
