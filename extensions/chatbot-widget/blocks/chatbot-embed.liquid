<div id="shopify-chatbot-widget"></div>
<script>
  // Pass shop domain to the chatbot widget - automatically fetched for any store
  window.SHOPIFY_CHATBOT_CONFIG = {
    shop_domain: "{{ shop.permanent_domain }}",
    shop_name: "{{ shop.name }}",
    shop_id: {{ shop.id }},
    shop_currency: "{{ shop.currency }}",
    shop_timezone: "{{ shop.timezone }}",
    // Widget will fetch app configuration automatically
    config_endpoint: "https://{{ shop.permanent_domain }}/apps/jarvis2-0/api/widget-config?shop={{ shop.permanent_domain }}"
  };
  
  // Debug: Log the configuration for troubleshooting
  console.log('ðŸ¤– Chatbot Config:', window.SHOPIFY_CHATBOT_CONFIG);
</script>
<script src="https://widget-frontend-6mo6.onrender.com/shopify_chatbot_widget.js" defer></script>
