<div id="chatbot-widget"></div>
<script>
  // Force all API calls through Shopify App Proxy - follows official Shopify documentation
  window.SHOPIFY_CHATBOT_CONFIG = {
    shop_domain: "{{ shop.permanent_domain }}",
    shop_name: "{{ shop.name }}",
    shop_id: {{ shop.id }},
    shop_currency: "{{ shop.currency }}",
    shop_timezone: "{{ shop.timezone }}",
    // Using Shopify App Proxy URLs as per documentation
    api_endpoints: {
      chat: "/a/jarvis-proxy/chat",
      abandoned_cart_discount: "/a/jarvis-proxy/abandoned-cart-discount",
      session: "/a/jarvis-proxy/session",
      customer_update: "/a/jarvis-proxy/customer/update",
      widget_config: "/a/jarvis-proxy/widget-config",
      recommendations: "/a/jarvis-proxy/recommendations"
    },
    // Force proxy usage through Shopify App Proxy
    use_proxy: true,
    proxy_base_url: "/a/jarvis-proxy"
  };
  
  // Set global shop domain for backward compatibility
  window.SHOP_DOMAIN = "{{ shop.permanent_domain }}";
  
  // Shopify object for additional compatibility
  window.Shopify = window.Shopify || {};
  window.Shopify.shop = "{{ shop.permanent_domain }}";
  
  // Debug: Log the configuration for troubleshooting
  console.log('ü§ñ Chatbot Config (Shopify App Proxy):', window.SHOPIFY_CHATBOT_CONFIG);
  console.log('üè™ Shop Domain:', window.SHOP_DOMAIN);
  console.log('‚úÖ Using Shopify App Proxy URLs (officially supported)');
</script>
