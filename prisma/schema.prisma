generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Shop {
  id            Int           @id @default(autoincrement())
  shopDomain    String        @unique
  accessToken   String
  installedAt   DateTime      @default(now())
  uninstalledAt DateTime?
  isActive      Boolean       @default(true)
  tokenVersion  Int           @default(1)
  subscription  Subscription?

  @@index([shopDomain, isActive])
}

model InstallationLog {
  id         Int      @id @default(autoincrement())
  shopDomain String
  action     String
  timestamp  DateTime @default(now())
  metadata   Json?

  @@index([shopDomain, timestamp])
}

model WidgetSettings {
  id                      Int      @id @default(autoincrement())
  shopDomain              String   @unique
  primaryColor            String   @default("#007bff")
  secondaryColor          String   @default("#0056b3")
  buttonSize              String   @default("60px")
  position                String   @default("bottom-right")
  buttonIcon              String   @default("ðŸ’¬")
  windowWidth             String   @default("320px")
  windowHeight            String   @default("420px")
  headerText              String   @default("Jarvis AI Chatbot")
  placeholderText         String   @default("Type your message...")
  welcomeMessage          String   @default("Hello! How can I assist you today?")
  showTypingIndicator     Boolean  @default(true)
  enableSounds            Boolean  @default(false)
  autoOpen                Boolean  @default(false)
  customCSS               String?
  isEnabled               Boolean  @default(true)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  cartAbandonmentDelay    Int      @default(300)
  cartAbandonmentDiscount Int      @default(10)
  cartAbandonmentEnabled  Boolean  @default(false)
  cartAbandonmentMessage  String   @default("Don't miss out! Complete your purchase and save {discount}% with code {code}")

  @@index([shopDomain])
}

model Plan {
  id            String         @id @default(cuid())
  name          String         @unique
  price         Decimal
  billingCycle  String
  messagesLimit Int
  features      Json
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]
}

model Subscription {
  id                 String    @id @default(cuid())
  shopDomain         String    @unique
  planId             String
  status             String
  billingCycle       String
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  trialEndsAt        DateTime?
  cancelledAt        DateTime?
  shopifyChargeId    String?   @unique
  shopifyPlanId      String?
  confirmationUrl    String?
  messagesUsed       Int       @default(0)
  messagesLimit      Int       @default(1000)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  payments           Payment[]
  plan               Plan      @relation(fields: [planId], references: [id])
  shop               Shop      @relation(fields: [shopDomain], references: [shopDomain])

  @@index([shopDomain, status])
}

model Payment {
  id             String       @id @default(cuid())
  subscriptionId String
  amount         Decimal
  currency       String       @default("USD")
  status         String
  paymentMethod  String
  transactionId  String?      @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])

  @@index([subscriptionId, status])
}

model ChatConversation {
  id                   String        @id @default(cuid())
  shopDomain           String
  sessionId            String?
  customerIp           String?
  customerName         String?
  startTime            DateTime      @default(now())
  endTime              DateTime?
  totalMessages        Int           @default(0)
  customerSatisfaction Float?
  converted            Boolean       @default(false)
  conversionValue      Decimal?
  topic                String?
  status               String        @default("active")
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  chatMessages         ChatMessage[]

  @@index([shopDomain, startTime])
  @@index([shopDomain, converted])
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  role           String
  content        String
  timestamp      DateTime         @default(now())
  responseTime   Float?
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, timestamp])
}

model AnalyticsMetrics {
  id                   String   @id @default(cuid())
  shopDomain           String
  date                 DateTime
  totalConversations   Int      @default(0)
  uniqueVisitors       Int      @default(0)
  totalMessages        Int      @default(0)
  averageResponseTime  Float?
  conversions          Int      @default(0)
  revenue              Decimal  @default(0)
  customerSatisfaction Float?
  topQuestions         Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@unique([shopDomain, date])
  @@index([shopDomain, date])
}

model CartAbandonmentLog {
  id                 String    @id
  shopDomain         String
  sessionId          String
  customerId         String?
  discountCode       String
  createdAt          DateTime  @default(now())
  cartTotal          Float?
  discountPercentage Int
  updatedAt          DateTime
  used               Boolean   @default(false)
  usedAt             DateTime?

  @@index([sessionId, shopDomain])
  @@index([shopDomain, createdAt])
}

model CartAbandonmentSettings {
  id           Int      @id @default(autoincrement())
  shopDomain   String   @unique
  enabled      Boolean  @default(false)
  discount     Int      @default(10)
  delayMinutes Int      @default(5)
  message      String   @default("Don't miss out! Complete your purchase and get {discount}% off!")
  createdAt    DateTime @default(now())
  updatedAt    DateTime

  @@index([shopDomain])
}

model CustomerFeedback {
  id            Int      @id @default(autoincrement())
  shopDomain    String
  sessionId     String?
  rating        Int
  feedbackText  String?
  customerName  String?
  customerEmail String?
  topic         String?
  source        String   @default("shopify_app")
  submittedAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  @@index([shopDomain, rating])
  @@index([shopDomain, submittedAt])
  @@index([topic])
}

model FeedbackSession {
  id                Int      @id @default(autoincrement())
  sessionId         String   @unique
  shopDomain        String
  feedbackToken     String   @unique
  customerName      String?
  customerEmail     String?
  conversationTopic String?
  expiresAt         DateTime
  isCompleted       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime

  @@index([feedbackToken])
  @@index([shopDomain])
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model customer_feedback {
  id                 Int       @id @default(autoincrement())
  session_id         String    @db.VarChar(255)
  shop_domain        String    @db.VarChar(255)
  rating             Int
  feedback_text      String?
  customer_name      String?   @db.VarChar(255)
  customer_email     String?   @db.VarChar(255)
  conversation_topic String?   @db.VarChar(100)
  submitted_at       DateTime? @default(now()) @db.Timestamp(6)
  created_at         DateTime? @default(now()) @db.Timestamp(6)
  updated_at         DateTime? @default(now()) @db.Timestamp(6)

  @@index([session_id], map: "idx_customer_feedback_session_id")
  @@index([shop_domain], map: "idx_customer_feedback_shop_domain")
  @@index([submitted_at], map: "idx_customer_feedback_submitted_at")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model feedback_sessions {
  id             Int       @id @default(autoincrement())
  feedback_token String    @unique @db.VarChar(255)
  session_id     String    @db.VarChar(255)
  shop_domain    String    @db.VarChar(255)
  customer_info  Json?
  status         String?   @default("pending") @db.VarChar(20)
  created_at     DateTime? @default(now()) @db.Timestamp(6)
  expires_at     DateTime  @db.Timestamp(6)
  completed_at   DateTime? @db.Timestamp(6)

  @@index([shop_domain], map: "idx_feedback_sessions_shop_domain")
  @@index([feedback_token], map: "idx_feedback_sessions_token")
}

// Partner Program Models
model Agency {
  id                      String             @id @default(cuid())
  name                    String
  email                   String             @unique
  referralCode            String             @unique
  paymentMethod           String?            // 'wise', 'paypal', 'bank_transfer'
  paymentEmail            String?            // for PayPal/Wise
  bankAccountEncrypted    String?            // encrypted bank details
  minimumPayoutThreshold  Decimal            @default(25.00)
  active                  Boolean            @default(true)
  paymentVerified         Boolean            @default(false)
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  merchantReferrals       MerchantReferral[]
  partnerPayouts          PartnerPayout[]

  @@index([referralCode])
  @@index([email])
}

model MerchantReferral {
  id                String    @id @default(cuid())
  shopDomain        String    @unique
  agencyId          String
  referredAt        DateTime  @default(now())
  lastBilledAmount  Decimal?
  lastBilledAt      DateTime?
  lifetimeRevenue   Decimal   @default(0)
  active            Boolean   @default(true)
  agency            Agency    @relation(fields: [agencyId], references: [id])

  @@index([shopDomain])
  @@index([agencyId])
  @@index([agencyId, active])
}

model PartnerPayout {
  id                  String    @id @default(cuid())
  agencyId            String
  monthFor            DateTime  // First day of month
  grossAmount         Decimal   @default(0)
  commissionAmount    Decimal   @default(0)
  commissionRate      Decimal   @default(0.25) // 25% commission
  paid                Boolean   @default(false)
  paymentReference    String?
  paymentMethod       String?   // 'wise', 'paypal', 'manual'
  paidAt              DateTime?
  notes               String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  agency              Agency    @relation(fields: [agencyId], references: [id])

  @@unique([agencyId, monthFor])
  @@index([agencyId, monthFor])
  @@index([paid])
}
